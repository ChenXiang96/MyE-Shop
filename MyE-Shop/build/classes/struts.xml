<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.devMode" value="false" />

	<package name="shop2" extends="struts-default" namespace="/">

	   <!-- 配置首页访问的Action -->
	   <action  name="index" class="indexAction">
	     <result name="index">/WEB-INF/jsp/index.jsp</result>
	   </action>
	   <!-- 配置用户模块的Action -->
       <action name="user_*" class="userAction" method="{1}">
	    <result name="registPage">/WEB-INF/jsp/register.jsp</result>
	    <result name="input">/WEB-INF/jsp/register.jsp</result>
	    <result name="yes">/WEB-INF/jsp/yes.jsp</result>
	    <result name="wayes">/WEB-INF/jsp/wayes.jsp</result>
	    <result name="ono">/WEB-INF/jsp/ono.jsp</result>
	    <result name="login">/WEB-INF/jsp/login.jsp</result>
	     <result name="loginSuccess" type="redirectAction">index</result>
	      <result name="quit" type="redirectAction">index</result>
	      <result name="checkcodeFail">/WEB-INF/jsp/register.jsp</result>
	      
	      
	   </action>
	   
	    <!-- 验证码的Action -->
	     <action name="checkImg" class="checkImgAction">

	     </action>
	</package>
</struts>
